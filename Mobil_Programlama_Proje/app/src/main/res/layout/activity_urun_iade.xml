<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrunIadeActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/et_iade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="İADE EDİLECEK SİPARİŞ" />

        <Button
            android:id="@+id/btn_iadeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İADE ET"
            android:background="@color/colorAccent"
            />

        <Button
            android:id="@+id/btn_iadeguncelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İADE GÜNCELLE"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/tv_durum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/liste_iadelistesi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>